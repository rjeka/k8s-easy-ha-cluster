apiVersion: kubeadm.k8s.io/v1beta3
kind: InitConfiguration
localAPIEndpoint:
  advertiseAddress: "{{ansible_host}}"
nodeRegistration:
  criSocket: unix:///run/containerd/containerd.sock

---
apiVersion: kubeadm.k8s.io/v1beta3
kind: ClusterConfiguration
imageRepository: "registry.k8s.io"
kubernetesVersion: "v{{ kubeVersion }}"
controlPlaneEndpoint: "{{ansible_host}}:6443"
apiServer:
  certSANs:
  - "127.0.0.1"
{% for host in groups['kube_masters'] %}
  - "{{ hostvars[host]['ansible_host'] }}"
{% endfor %}
  timeoutForControlPlane: 4m0s
etcd:
  external:
    endpoints:
{% for host in groups['kube_masters'] %}
    - "https://{{ hostvars[host]['ansible_host'] }}:2379"
{% endfor %}
    caFile: /etc/ssl/etcd/ca.pem
    certFile: /etc/ssl/etcd/client.pem
    keyFile: /etc/ssl/etcd/client-key.pem
networking:
  podSubnet: "{{ CIDR }}"
